<h3> Dish Information</h3>
  <section id="dish-details">
    <h5> Name: <%= @dish.name %></h5>
    <h5> Description: <%= @dish.description %></h5>
    <section id="ingredient-list">
      <h5> List of Ingredients: <% @dish.ingredients.each do |i| %></h5>
        <p><%= i.name%></p>
        <p><%= button_to "Delete #{i.name}", dish_ingredient_path(@dish, i), method: :delete %></p>
      <% end %>
    </section>
    <h5> Total Calories: <%= @dish.calorie_count %></h5>
    <h5> Chef D'Cuisine: <%= @dish.chef.name %></h5>

  </section>

  <%= form_with url: "/dishes/#{@dish.id}/ingredients", method: :post, local: true, data: { turbo: false } do |form| %>
  <%= form.label :ingredient_id, "Add Ingredient" %>
  <%= form.number_field :ingredient_id %>
  <%= form.submit "Add Ingredient" %>
  <% end %>
